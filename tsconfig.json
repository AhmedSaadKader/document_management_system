{
  "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "lib": ["ES2020", "DOM"],
      "outDir": "./build",
      "strict": true,
      "noImplicitAny": true,
      "typeRoots": ["./types"],
      "moduleResolution": "node",
      "sourceMap": true,
      "strictFunctionTypes": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
  },
  "exclude": ["node_modules", "spec"]
}