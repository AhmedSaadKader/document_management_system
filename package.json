{
  "name": "document_management_system",
  "version": "1.0.0",
  "description": "MERN stack Document Management System with integrated relational and NoSQL databases.",
  "main": "app.js",
  "scripts": {
    "start": "node dist/app.js",
    "nodemon": "nodemon src/app.ts",
    "build": "tsc",
    "jasmine": "jest --coverage --detectOpenHandles",
    "test": "set ENV=test&& db-migrate db:drop document_management_system_test && db-migrate db:create document_management_system_test && db-migrate --env test up && npm run build && npm run jasmine && db-migrate db:drop document_management_system_test",
    "test:coverage": "npm run build && npx nyc --reporter=html --reporter=text --check-coverage npm run test",
    "migrate": "db-migrate --env test up && db-migrate up",
    "lint": "eslint src/**/*.ts",
    "prettier": "prettier --config .prettierrc --write src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AhmedSaadKader/document_management_system.git"
  },
  "author": "Ahmed Saad",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AhmedSaadKader/document_management_system/issues"
  },
  "homepage": "https://github.com/AhmedSaadKader/document_management_system#readme",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.637.0",
    "aws-sdk": "^2.1682.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.3",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.12.0",
    "typescript": "^5.5.4",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.24.7",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@jest/globals": "^29.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/eslint": "^9.6.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mime-types": "^2.1.4",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.4.0",
    "@types/nodemailer": "^6.4.15",
    "@types/pg": "^8.11.6",
    "@types/prettier": "^3.0.0",
    "@types/semver": "^7.5.8",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.0.0",
    "nodemon": "^3.1.4",
